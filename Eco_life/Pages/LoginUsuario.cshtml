@page
@model Eco_life.Pages.LoginUsuarioModel
@{
    ViewData["Title"] = "Login de Usuário";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login de Usuário</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <h1>Login de Usuário</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color:red;">@Model.ErrorMessage</div>
    }

    <form method="post">
        <label for="email">Email:</label>
        <input type="email" name="Email_User" required /><br />

        <label for="senha">Senha:</label>
        <input type="password" name="Senha_User" required /><br />

        <button type="submit">Entrar</button>
    </form>
</body>
</html>
